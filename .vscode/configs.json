{
    "editor.fontFamily": "Consolas, 'Dank Mono', 'Source Code Pro', 'Fira Code', Menlo, 'Inconsolata', 'Droid Sans Mono', 'DejaVu Sans Mono', 'Ubuntu Mono', 'Courier New', Courier, Monaco, monospace",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "OM Theme (Default Dracula Italic)",
    "editor.minimap.enabled": false,
    "editor.fontSize": 15,
    "code-runner.clearPreviousOutput": true,
    "breadcrumbs.enabled": true,
    "workbench.iconTheme": "eq-material-theme-icons-darker",
    "window.zoomLevel": 0,
    "debug.console.fontSize": 15,
    "terminal.integrated.fontSize": 15,
    "python.languageServer": "Pylance", // ms-python.vscode-pylance
    "editor.formatOnSave": true,
    "files.associations": {
        "django-html": "html", // batisteo.vscode-django
        "**/*.html": "html",
        "**/templates/**/*.html": "django-html",
        "**/base_templates/**/*.html": "django-html",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    "emmet.includeLanguages": {
        "django-html": "html"
    },
    "python.linting.pylintArgs": [
        "--load-plugins=pylint_django",
        "--errors-only",
    ],
    "editor.rulers": [
        79,
    ],
    "git.enableSmartCommit": true,
    "python.defaultInterpreterPath": "venv/bin/python",
    "python.formatting.autopep8Args": [
        "--indent-size=4"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.python", // ms-python.python
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.formatOnType": true,
    },
    "[html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        }
    },
    "[django-html]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        }
    },
    "code-runner.executorMap": {
        "python": "./venv/bin/python -u",
        "javascript": "node",
        "php": "php",
        "perl": "perl",
        "shellscript": "bash",
    },
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    //following will be in italic
                    "comment",
                    "entity.name.type.class", //class names
                    "constant", //String, Number, Boolean…, this, super
                    "storage.modifier", //static keyword
                    "storage.type.class.py", //class keyword
                    "keyword", //import, export, return…
                    "arguments",
                    "entity.name.function",
                    "entity.name.type",
                    "entity.name.class"
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            },
        ]
    },
    "files.autoSave": "afterDelay",
    "workbench.tree.indent": 6,
    "editor.wrappingIndent": "indent",
    "explorer.compactFolders": false,
    "git.autofetch": true,
    "workbench.editorAssociations": {
        "*.pdf": "default",
        "*.csv": "default"
    },
    "explorer.confirmDragAndDrop": false,
    "vsicons.dontShowNewVersionMessage": true,
    "explorer.confirmDelete": false,
    "python.autoComplete.extraPaths": [],
    "python.analysis.extraPaths": [],
    "git.openRepositoryInParentFolders": "never",
    "tabnine.experimentalAutoImports": true,
}
